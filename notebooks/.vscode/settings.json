{
  "emeraldwalk.runonsave": {
    "commands": [
      {
        // Run whenever any file is saved
        "match": ".ipynb",
        "cmd": "echo '${fileBasename}' notebook saved.",
        "autoShowOutputPanel": "always"
      },
